<UserControl x:Class="WpfDemoApp.UserControls.Exo4UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDemoApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Name="btnWithImg" HorizontalAlignment="Left" Margin="252,157,0,0" VerticalAlignment="Top" Background="{x:Null}" Click="BtnImg_Click">
            <Grid>
                <Image x:Name="btnImg" Height="100" Width="100" Source="/UserControls/puce.jpg"/>
                <TextBlock x:Name="textBtnWithImg" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFEBEECC" FontSize="16" FontWeight="Bold">Cliquez-moi</TextBlock>
            </Grid>
        </Button>

    </Grid>
</UserControl>
